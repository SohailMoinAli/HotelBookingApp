<!DOCTYPE html>
<html lang="en">

<style>
    /* Apply CSS styles to make the content area full-screen */
    .container-scroller {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
    }

    /* Adjust padding for the content area */
    .content-wrapper {
        padding-top: 56px; /* Adjust this value according to your navbar height */
    }
</style>


<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Corona Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/admin/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/admin/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/admin/css/jquery-jvectormap.css">
    <link rel="stylesheet" href="~/admin/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/admin/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/admin/css/owl.theme.default.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/admin/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/admin/images/favicon.png" />
</head>
<body>
    <div class="container-scroller">

        <!-- partial:partials/_sidebar.html -->
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <div class="sidebar-brand-wrapper d-none d-lg-flex align-items-center justify-content-center fixed-top">
                <a class="sidebar-brand brand-logo" href="index.html"><img src="~/admin/images/logo.svg" alt="logo" /></a>
                <a class="sidebar-brand brand-logo-mini" href="index.html"><img src="~/admin/images/logo-mini.svg" alt="logo" /></a>
            </div>
            <ul class="nav">
                <li class="nav-item profile">
                    <div class="profile-desc">
                        <div class="profile-pic">

                            <div class="profile-name">
                                <h5 class="mb-0 font-weight-normal">Moonlight Hotel</h5>
                                <span>Admin Panel</span>
                            </div>
                        </div>
                </li>
                <li class="nav-item nav-category">
                    <span class="nav-link">Navigation</span>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Home">Home</a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-area="" asp-controller="Rooms" asp-action="Index">Rooms Management</a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-area="" asp-controller="RoomType" asp-action="Index">Room Types Management</a>

                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-area="" asp-controller="feedback" asp-action="AdminView">View Feedbacks</a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="ListOffers">Special Offers</a>
                </li>
            </ul>
        </nav>
        <!-- partial -->
        <!-- Main content -->
        <div class="container-scroller">
            @RenderBody()
        </div>
        <div class="full-screen">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>



        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/admin/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/admin/js/Chart.min.js"></script>
    <script src="~/admin/js/progressbar.min.js"></script>
    <script src="~/admin/js/jquery-jvectormap.min.js"></script>
    <script src="~/admin/js/jquery-jvectormap-world-mill-en.js"></script>
    <script src="~/admin/js/owl.carousel.min.js"></script>
    <script src="~/admin/js/jquery.cookie.js" type="text/javascript"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/admin/js/off-canvas.js"></script>
    <script src="~/admin/js/hoverable-collapse.js"></script>
    <script src="~/admin/js/misc.js"></script>
    <script src="~/admin/js/settings.js"></script>
    <script src="~/admin/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="~/admin/js/dashboard.js"></script>
    <!-- End custom js for this page -->
</body>
</html>


   


