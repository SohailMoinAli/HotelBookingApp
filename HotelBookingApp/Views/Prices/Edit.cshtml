@model HotelBookingApp.Models.PricesViewModel

<h2>Edit Prices</h2>

<form asp-action="Edit" asp-controller="Prices" method="post">
    <h3>Room Prices</h3>
    @for (int i = 0; i < Model.Rooms.Count; i++)
    {
        <div>
            <label asp-for="@Model.Rooms[i].Price">@Model.Rooms[i].Number - @Model.Rooms[i].Type</label>
            <input asp-for="@Model.Rooms[i].Price" type="number" step="0.01" class="form-control" />
        </div>
    }

    <h3>Additional Services Prices</h3>
    @for (int j = 0; j < Model.AdditionalServicesList.Count; j++)
    {
        <div>
            <label asp-for="@Model.AdditionalServicesList[j].DinnerPrice">Dinner Reservation Price:</label>
            <input asp-for="@Model.AdditionalServicesList[j].DinnerPrice" type="number" step="0.01" class="form-control" />
            <label asp-for="@Model.AdditionalServicesList[j].TourPrice">Tour Booking Price:</label>
            <input asp-for="@Model.AdditionalServicesList[j].TourPrice" type="number" step="0.01" class="form-control" />
            <label asp-for="@Model.AdditionalServicesList[j].GolfPackagePrice">Golf Package Price:</label>
            <input asp-for="@Model.AdditionalServicesList[j].GolfPackagePrice" type="number" step="0.01" class="form-control" />
        </div>
    }

    <button type="submit" class="btn btn-primary">Update Prices</button>
</form>
