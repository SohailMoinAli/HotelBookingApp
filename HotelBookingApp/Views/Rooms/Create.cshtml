@model HotelBookingApp.Models.Room

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Room</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background-color: #f5f5dc; /* Soft cream color */
        }
    </style>
</head>
<body>
    <div class="flex items-center justify-center min-h-screen">
        <div class="bg-white p-8 rounded-lg shadow-lg max-w-lg">
            <h1 class="text-2xl font-bold text-center mb-4">Create Room</h1>
            <form asp-action="Create" class="space-y-4">
                <div asp-validation-summary="ModelOnly" class="text-red-500"></div>

                <div class="form-group">
                    <label asp-for="Number" class="block text-lg font-semibold">Room Number</label>
                    <input asp-for="Number" class="w-full px-4 py-2 border rounded-md text-lg" />
                    <span asp-validation-for="Number" class="text-red-500"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Type" class="block text-lg font-semibold">Room Type</label>
                    <input asp-for="Type" class="w-full px-4 py-2 border rounded-md text-lg" />
                    <span asp-validation-for="Type" class="text-red-500"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="block text-lg font-semibold">Price</label>
                    <input asp-for="Price" class="w-full px-4 py-2 border rounded-md text-lg" type="number" step="0.01" min="0" />
                    <span asp-validation-for="Price" class="text-red-500"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IsAvailable" class="block text-lg font-semibold">Availability</label>
                    <select asp-for="IsAvailable" class="w-full px-4 py-2 border rounded-md text-lg">
                        <option value="true">Available</option>
                        <option value="false">Booked</option>
                    </select>
                    <span asp-validation-for="IsAvailable" class="text-red-500"></span>
                </div>

                <button type="submit" class="w-full bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-md text-lg font-semibold">Create</button>
            </form>

            <div class="mt-4">
                <a href="@Url.Action("Index")" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-md font-semibold">Back to List</a>
            </div>
        </div>
    </div>
</body>
</html>
