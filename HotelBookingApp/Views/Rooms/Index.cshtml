@model IEnumerable<HotelBookingApp.Models.RoomViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Room List</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background-color: #f5f5dc; /* Soft cream color */
        }
    </style>
</head>
<body>
    <div class="flex items-center justify-center min-h-screen">
        <div class="bg-white p-8 rounded-lg shadow-lg max-w-4xl w-full">
            <h2 class="text-2xl font-bold mb-4">Room List</h2>
            <p>
                <a href="@Url.Action("Create")" class="inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer">Create New Room</a>
            </p>

            <table class="min-w-full table-auto">
                <thead class="bg-gray-200">
                    <tr>
                        <th class="px-4 py-2 text-left">Room Number</th>
                        <th class="px-4 py-2 text-left">Type</th>
                        <th class="px-4 py-2 text-left">Status</th>
                        <th class="px-4 py-2 text-left">Actions</th> <!-- Optionally added for future edit/delete actions -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="border px-4 py-2">@Html.DisplayFor(modelItem => item.Number)</td>
                            <td class="border px-4 py-2">@Html.DisplayFor(modelItem => item.Type)</td>
                            <td class="border px-4 py-2">@Html.DisplayFor(modelItem => item.AvailabilityStatus)</td>
                            <td class="border px-4 py-2">
                                <a href="@Url.Action("Edit", new { id = item.RoomId })" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-3 rounded cursor-pointer">Edit</a>
                                <!-- Additional buttons for other actions like Delete can also be added here -->
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
