@{
    Layout = "_Layout";  // Assuming you have a layout file to include header, footer, etc.
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Room Types - USP Hotel</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" />
    <style>
        body {
            background-color: #F7FAFC; /* Lighter background color for a fresher look */
        }

        .box-container {
            width: 100%;
            margin: 20px auto;
            padding: 2rem;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s cubic-bezier(.25,.8,.25,1);
            color: #4A5568;
            font-family: 'Open Sans', sans-serif;
        }


        @@media (min-width: 768px) {
            .box-container {
                max-width: 80%; /* Adjust based on breakpoint */
            }
        }

        table {
            width: 100%; /* Ensures the table is full-width */
            border-collapse: collapse;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #E2E8F0; /* Light gray border for subtle separation */
        }

        th {
            background-color: #EDF2F7; /* Slightly colored header for distinction */
            color: #2D3748; /* Darker text for headers */
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 8px 16px;
            font-size: 14px;
            border-radius: 6px;
            transition: background-color 0.3s;
            text-decoration: none;
            color: white;
        }

        .btn-primary {
            background-color: #4299E1;
        }

        .btn-success {
            background-color: #48BB78;
        }

        .btn-danger {
            background-color: #F56565;
        }

            .btn-primary:hover, .btn-success:hover, .btn-danger:hover {
                opacity: 0.9;
            }
    </style>
</head>

<div class="flex justify-center items-center min-h-screen">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden max-w-md w-full p-8 text-center">
        <h1 class="font-bold text-2xl mb-4">Thank You!</h1>
        <p class="mb-6">Your feedback has been successfully submitted.</p>
        <a href="@Url.Action("Index", "Home")" class="inline-block text-center bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer">
            Return to Home
        </a>
    </div>
</div>
